<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/txtEditProductWeight"
            android:textColor="@color/appColorBlack"
            android:textSize="@dimen/_9sdp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/llDialogClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:padding="@dimen/_2sdp">

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_close_black" />

        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@color/appColorMediumGrey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_rect_round_corner"
        android:padding="@dimen/_10sdp"
        android:layout_margin="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:gravity="center_vertical"
                android:text="SKU"
                android:textColor="@color/appColorBlack"
                android:textSize="@dimen/_7sdp" />

            <TextView
                android:id="@+id/tvSKUEditWeight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:gravity="center_vertical"
                android:text="12312312313"
                android:textColor="@color/appColorBlack"
                android:textSize="@dimen/_7sdp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="@dimen/_5sdp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:gravity="center_vertical"
                android:text="Product Item"
                android:textColor="@color/appColorBlack"
                android:textSize="@dimen/_7sdp" />

            <TextView
                android:id="@+id/tvNameEditWeight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:ellipsize="marquee"
                android:gravity="center_vertical"
                android:scrollbars="vertical"
                android:singleLine="true"
                android:text="Gobordhon Ghee"
                android:textColor="@color/appColorBlack"
                android:textSize="@dimen/_7sdp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="@dimen/_5sdp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:gravity="center_vertical"
                android:text="Existing Price"
                android:textColor="@color/appColorBlack"
                android:textSize="@dimen/_7sdp" />

            <TextView
                android:id="@+id/tvPriceEditWeight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:gravity="center_vertical"
                android:text="₹ 270.50"
                android:textColor="@color/appColorBlack"
                android:textSize="@dimen/_7sdp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="@dimen/_5sdp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:gravity="center_vertical"
                android:text="Existing Weight"
                android:textColor="@color/appColorBlack"
                android:textSize="@dimen/_7sdp" />

            <TextView
                android:id="@+id/tvWeightEditWeight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:gravity="center_vertical"
                android:text="₹ 270.50"
                android:textColor="@color/appColorBlack"
                android:textSize="@dimen/_7sdp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_weight_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="@dimen/_5sdp">

            <TextView
                android:id="@+id/new_weight_label"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:gravity="center_vertical"
                android:text="Total Weight"
                android:textColor="@color/appColorBlack"
                android:textSize="@dimen/_7sdp" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.3">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etWeightEditWeight"
                    android:hint="@string/txtWeight"
                    android:inputType="numberDecimal"
                    android:textSize="@dimen/_7sdp"
                    android:textColor="@color/appColorDarkGrey"
                    android:textColorHint="@color/appColorDarkGrey"/>

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="@dimen/_5sdp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:gravity="center_vertical"
                android:text="New Price"
                android:textColor="@color/appColorBlack"
                android:textSize="@dimen/_7sdp" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.3">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etNewPriceEditWeight"
                    android:hint="@string/txtNewPrice"
                    android:inputType="none"
                    android:editable="false"
                    android:clickable="false"
                    android:enabled="false"
                    android:textSize="@dimen/_7sdp"
                    android:textColor="@color/appColorDarkGrey"
                    android:textColorHint="@color/appColorDarkGrey"/>

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:weightSum="2"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:text="Notes"
                android:textColor="@color/appColorBlack"
                android:textSize="@dimen/_7sdp"
                android:gravity="center_vertical"/>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.3">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etNotesEditWeight"
                    android:hint="@string/txtNotes"
                    android:inputType="textMultiLine"
                    android:textSize="@dimen/_7sdp"
                    android:textColor="@color/appColorDarkGrey"
                    android:textColorHint="@color/appColorDarkGrey"
                    android:lines="4"
                    android:maxLines="10"
                    android:gravity="start"/>

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvApplyEditWeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/bg_green_round_corner"
        android:gravity="center"
        android:padding="@dimen/_7sdp"
        android:text="APPLY"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_7sdp" />
</LinearLayout>
