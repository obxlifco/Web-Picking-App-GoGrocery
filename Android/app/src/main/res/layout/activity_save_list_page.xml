<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rlHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.appbar.AppBarLayout
                    android:id="@+id/app_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fitsSystemWindows="false"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:background="@color/white"
                        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/ivBack"
                                android:layout_width="@dimen/back_btn_width"
                                android:layout_height="@dimen/back_btn_height"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="8dp"
                                android:src="@drawable/back_arrow_black" />

                            <TextView
                                android:id="@+id/tvListingTitle"
                                android:textColor="#202020"
                                android:textSize="16sp"

                                android:fontFamily="@font/montserrat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toStartOf="@+id/ivSearch"
                                android:layout_toLeftOf="@+id/ivSearch"
                                android:layout_toEndOf="@+id/ivBack"
                                android:layout_toRightOf="@+id/ivBack"
                                android:text="@string/save_list_title" />

                            <TextView
                                android:visibility="gone"
                                android:id="@+id/tvAddNew"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="16dp"
                                android:layout_weight="1"
                                android:background="@drawable/change_pass_red_border_bg"
                                android:paddingLeft="12dp"
                                android:textSize="12sp"
                                android:paddingTop="6dp"
                                android:paddingRight="12dp"
                                android:fontFamily="@font/montserrat"
                                android:paddingBottom="6dp"
                                android:text="ADD NEW"
                                android:textColor="@color/app_red_clr" />

                            <RelativeLayout
                                android:id="@+id/cartRl"
                                android:layout_width="32dp"
                                android:layout_height="26dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="16dp"
                                android:visibility="gone">


                                <ImageView
                                    android:id="@+id/ivCart"
                                    android:layout_width="20dp"
                                    android:layout_height="22dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentBottom="true"
                                    android:src="@drawable/ic_cart" />

                                <TextView
                                    android:id="@+id/badge_notification"
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:layout_gravity="right|end|top"
                                    android:layout_marginTop="3dp"
                                    android:layout_marginEnd="-10dp"
                                    android:layout_marginRight="-10dp"
                                    android:layout_toLeftOf="@+id/ivCart"
                                    android:background="@drawable/badge_circle"
                                    android:gravity="center"
                                    android:padding="3dp"
                                    android:text="0"
                                    android:textColor="@android:color/white"
                                    android:textSize="8sp"
                                    android:visibility="gone" />


                            </RelativeLayout>

                            <ImageView
                                android:id="@+id/ivWishList"
                                android:layout_width="18dp"
                                android:layout_height="22dp"
                                android:layout_alignRight="@+id/cartRl"
                                android:layout_alignBottom="@+id/cartRl"
                                android:layout_marginRight="36dp"
                                android:layout_marginBottom="-4dp"
                                android:src="@drawable/location_pin"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/ivSearch"
                                android:layout_width="18dp"
                                android:layout_height="20dp"
                                android:layout_alignRight="@+id/ivWishList"
                                android:layout_alignBottom="@+id/ivWishList"
                                android:layout_marginRight="32dp"
                                android:src="@drawable/search"
                                android:visibility="gone" />
                        </RelativeLayout>
                    </androidx.appcompat.widget.Toolbar>
                </com.google.android.material.appbar.AppBarLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txtCNL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cvHeader"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/montserrat"
            android:text="@string/save_list_cnl"
            android:textColor="#4C4C4C" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cvCreate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtCNL">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout

                    android:id="@+id/tilSaveListName"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:hint="@string/save_list_enl"
                    app:boxStrokeColor="#10893C"
                    app:hintTextAppearance="@style/customHintApperance">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtSaveListName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btnCreate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tilemailaddress"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/signin_btn_bg"
                    android:fontFamily="@font/hind_semibold"
                    android:text="@string/save_list_cna"
                    android:textColor="@color/white" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txtMSL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cvCreate"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/montserrat"
            android:text="@string/save_list_msl"
            android:textColor="#4C4C4C" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMySaveList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtMSL"
            tools:listitem="@layout/my_save_list_row" />

        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/progressSpinKitView"
            style="@style/SpinKitView.Small.ThreeBounce"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:background="@drawable/curve_corner_translucent_bg"
            android:padding="8dp"
            android:visibility="gone"
            app:SpinKit_Color="@color/green_new" />
    </RelativeLayout>
</layout>