<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivItemImage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/dummy_item_img" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ivItemImage"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/ivItemImage">

            <TextView
                android:id="@+id/tvItemBrand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hind_medium"
                android:text="Healthy"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvItemBrand"
                android:ellipsize="end"
                android:fontFamily="@font/hind_medium"
                android:lines="1"
                android:maxLines="1"
                android:text="Organic Moong Dal Yellow Split"
                android:textColor="@color/black" />

            <RelativeLayout
                android:id="@+id/rlPricingDiscount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvItemName"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tvDiscountedPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="AED 50.00"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:fontFamily="@font/hind" />

                <TextView
                    android:id="@+id/tvOriginalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/tvDiscountedPrice"
                    android:textColor="@color/black"
                    android:visibility="gone"
                    app:fontFamily="@font/hind" />

                <LinearLayout
                    android:id="@+id/llPlusMins"
                    android:layout_width="112dp"
                    android:layout_height="34dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/green_border_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/rlMinus"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/my_cart_minus_bg">

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="12dp"
                            android:layout_centerInParent="true"
                            android:backgroundTint="@color/white"
                            android:src="@drawable/minus_white" />
                    </RelativeLayout>


                    <TextView
                        android:id="@+id/tvQuantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/hind_semibold"

                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <RelativeLayout
                        android:id="@+id/rlPlus"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/my_cart_plus_bg">

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_centerInParent="true"
                            android:backgroundTint="@color/white"
                            android:src="@drawable/plus_white" />
                    </RelativeLayout>

                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>
</layout>