<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/transparent"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <!-- <androidx.cardview.widget.CardView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"

         android:layout_marginStart="@dimen/_10sdp"
         android:layout_marginEnd="@dimen/_10sdp"
         app:cardCornerRadius="@dimen/_20sdp"
         android:layout_marginBottom="-10dp">-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:background="@drawable/bottom_sheet_white_round_corner"
android:layout_margin="@dimen/_10sdp"
       >

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/proxima_regular"
        android:gravity="center"
        android:text="Filters"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:textAlignment="center"
        android:textColor="@color/green_dark_new"
        android:textStyle="bold"
        android:textSize="@dimen/_15sdp"/>
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/back_btn_width"
            android:layout_height="@dimen/back_btn_height"
    android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:padding="@dimen/_6sdp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_close"
            android:tint="@color/brown_new"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_below="@+id/tv1"
        android:layout_above="@+id/mcvFooter"
        tools:context=".view.FilterActivity">


        <View
            android:layout_marginTop="8dp"
            android:id="@+id/viewHeaderDvider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:layout_below="@+id/cvHeader"
            android:background="@drawable/test_divider" />

        <RelativeLayout

            android:id="@+id/rlLeftMenu"
            android:background="#F9F9F9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewHeaderDvider">

            <androidx.recyclerview.widget.RecyclerView
                android:background="#F9F9F9"
                android:id="@+id/rvSideMenuCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <View
                android:visibility="invisible"
                android:id="@+id/menuDividerBelow"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/rvSideMenuCategory"
                android:layout_marginLeft="150dp"
                android:background="@color/view_divider_clr"
                android:elevation="0dp" />
            <View
                android:visibility="gone"
                android:id="@+id/menuDivider"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/rvSideMenuCategory"
                android:background="@color/view_divider_clr"
                android:elevation="0dp" />
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvRightMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/viewHeaderDvider"
            android:layout_toRightOf="@+id/rlLeftMenu" />

        <ProgressBar
            android:id="@+id/progressSpinKitView"

            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"

            android:visibility="gone"
            />

    </RelativeLayout>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcvFooter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentBottom="true"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            android:layout_gravity="center"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginBottom="@dimen/_4sdp"
                android:orientation="horizontal"
                android:paddingTop="8dp">

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="5dp"
                    android:visibility="gone"
                    android:layout_weight="1"
                    android:background="@drawable/change_pass_red_border_bg"
                    android:text="@string/cancel"
                    android:textColor="@color/app_red_clr" />
                <Button
                    android:id="@+id/tvClearAll"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/gray_round_side_new"
                    android:fontFamily="@font/proxima_regular"
                    android:text="Clear all"
                    android:textColor="#050505"
                    android:textStyle="bold" />


                <Button
                    android:id="@+id/btnApplyFilter"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/green_round_side"
                    android:fontFamily="@font/proxima_regular"
                    android:text="@string/apply"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/_12sdp"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>

    </LinearLayout>
</layout>