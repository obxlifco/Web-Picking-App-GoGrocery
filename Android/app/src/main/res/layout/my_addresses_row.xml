<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvDeliveryDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:cardCornerRadius="4dp"
       app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_height="wrap_content">

            <RadioButton

                android:layout_marginLeft="8dp"
                android:id="@+id/rbSelection"
         android:button="@null"
                android:layout_alignParentStart="true"
                android:drawableStart="@drawable/custom_btn_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/lldetail" />


            <ImageView
                android:id="@+id/ivMoreAddress"
                android:layout_marginEnd="16dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/vertical_more"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/lldetail"
                android:layout_width="24dp"
                android:layout_height="24dp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/more_vertical"
                android:visibility="gone" />
            <LinearLayout
                android:id="@+id/lldetail"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/rbSelection"
                android:layout_toStartOf="@+id/ivMoreAddress"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:textAlignment="viewStart"
                        android:fontFamily="@font/hind"
                        android:text="Rahul Sharma"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tvIsDefault"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@+id/tvName"
                        android:background="@drawable/pay_option_default_bg"
                        android:fontFamily="@font/hind_medium"
                        android:text="@string/pay_option_default"
                        android:textColor="#0B9444"
                        android:visibility="gone" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvName"
                    android:layout_toLeftOf="@+id/ivMore"
                    android:layout_weight="1"
                    android:ellipsize="end"

                    android:textAlignment="viewStart"
                    android:fontFamily="@font/hind"
                    android:text="@string/pay_option_dummy_address"
                    android:textColor="#5C5C5C" />
            </LinearLayout>


            <TextView
                android:id="@+id/txtMobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lldetail"
                android:layout_alignStart="@+id/lldetail"
                android:layout_marginStart="0dp"
                android:layout_toEndOf="@+id/rbSelection"
                android:fontFamily="@font/hind"
                android:text="@string/mobile"
                android:textColor="#5C5C5C" />

            <TextView
                android:id="@+id/tvMobileNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lldetail"
                android:layout_toEndOf="@+id/txtMobile"
                android:fontFamily="@font/hind"
                android:ellipsize="end"
                android:textAlignment="viewStart"
                android:text="9845632140"
                android:textColor="#575757"
                android:textStyle="bold" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

