<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<TextView
    android:id="@+id/txtDate"
    android:text="Date : "
    android:textColor="@color/black"
    android:fontFamily="@font/hind_medium"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvDate"
        android:text="29/11/2019"
        android:layout_toRightOf="@+id/txtDate"
        android:fontFamily="@font/hind_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@id/txtDate"
        android:id="@+id/txtEP"
        android:text="Earned Points : "
        android:textColor="@color/black"
        android:fontFamily="@font/hind_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@+id/tvDate"
        android:layout_toRightOf="@+id/txtEP"
        android:id="@+id/tvEP"
        android:text="0"
        android:textColor="@color/app_green_clr"
        android:fontFamily="@font/hind_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@id/txtEP"
        android:id="@+id/txtUP"
        android:text="Used Points : "
        android:textColor="@color/black"
        android:fontFamily="@font/hind_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@+id/tvEP"
        android:layout_toRightOf="@+id/txtUP"
        android:id="@+id/tvUP"
        android:text="0"
        android:textColor="@color/app_green_clr"
        android:fontFamily="@font/hind_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@id/txtUP"
        android:id="@+id/txtRP"
        android:text="Remaining Points : "
        android:textColor="@color/black"
        android:fontFamily="@font/hind_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@+id/tvUP"
        android:layout_toRightOf="@+id/txtRP"
        android:id="@+id/tvRP"
        android:text="0"
        android:fontFamily="@font/hind_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
</androidx.cardview.widget.CardView>