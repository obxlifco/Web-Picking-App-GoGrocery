<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.ProductDetailsView">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/tv_toolbar"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/ivBtnClose"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:padding="5dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_close"
                android:tint="@color/brown_new"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </ImageView>

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"

                android:ellipsize="end"
                android:fontFamily="@font/montserrat"
                android:lines="1"
                android:text="@string/product_description"
                android:textAlignment="center"
                android:textColor="#202020"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/ivBtnClose"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tvItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
         android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/tv_toolbar"
            app:autoSizeTextType="uniform"
            android:maxLines="3"
            android:layout_marginEnd="@dimen/_4sdp"

            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="19sp"
            app:autoSizeStepGranularity="2sp"
            android:textStyle="bold"
            app:fontFamily="@font/proxima_regular"
            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
android:id="@+id/scrollView"
            android:layout_marginBottom="@dimen/_16sdp"

            android:layout_below="@+id/tvItemName"
            android:scrollbarSize="0dp">
            <RelativeLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvProductDescription"
android:layout_alignParentTop="true"
                  android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:ellipsize="end"
                    app:autoSizeTextType="uniform"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"

                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textSize="19sp"
                    android:lineSpacingExtra="1dp"
                    app:autoSizeStepGranularity="2sp"

                    app:fontFamily="@font/proxima_regular"
                    />

                <TextView
                    android:id="@+id/txtOk"
                    android:textAlignment="center"
                    android:text="@string/ok"
                    android:textColor="@color/white"
                    android:fontFamily="@font/proxima_bold"
                    android:textSize="16sp"
                    android:layout_below="@+id/tvProductDescription"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/my_order_payment_status_unpaid_bg"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_26sdp"
                    android:paddingStart="@dimen/_26sdp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="@dimen/_10sdp"/>

            </RelativeLayout>

        </ScrollView>



    </RelativeLayout>

</layout>
