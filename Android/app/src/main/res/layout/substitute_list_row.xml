<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_6sdp"
    app:cardElevation="@dimen/_6sdp"
    android:layout_height="wrap_content">

<RelativeLayout

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"

    android:background="@color/white">

    <LinearLayout
        android:id="@+id/ll_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:background="@color/white">
        <ImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:id="@+id/ivPicSubsListRow"
            android:src="@drawable/dummy_item_img"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvNameSubsListRow"
        android:layout_below="@+id/tvPriceSubsListRow"
        android:layout_marginTop="@dimen/_2sdp"
        android:ellipsize="end"
        android:textAlignment="viewStart"
        android:lineSpacingMultiplier="0.7"
        android:maxLines="1"
        android:text="Name"
        android:layout_alignParentStart="true"
        android:background="@color/white"
        android:textColor="@color/black"
        android:textSize="@dimen/_9sdp"
        app:fontFamily="@font/proxima_regular"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:gravity="start"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvWeightSubsListRow"
        android:text="125 Gr"
        android:layout_below="@+id/tvNameSubsListRow"
android:fontFamily="@font/proxima_regular"
        android:background="@color/white"
        android:textColor="@color/side_menu_rv_clr"
        android:textSize="@dimen/_8sdp"
        android:ellipsize="end"
        android:layout_alignParentStart="true"
        android:textAlignment="viewStart"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="@dimen/_2sdp"/>
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvPriceSubsListRow"
        android:layout_below="@+id/ll_image"
        android:text="@string/current_curremcy_zero"
        android:textColor="@color/green_dark_new"
        android:textSize="@dimen/_10sdp"
        android:textStyle="bold"
        android:ellipsize="end"
        android:layout_alignParentStart="true"
        android:textAlignment="viewStart"
        app:fontFamily="@font/proxima_regular"
        android:fontFamily="@font/proxima_regular"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_2sdp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvWeightSubsListRow"

        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_6sdp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/tvReturnRow"
            android:layout_width="28dp"
            android:visibility="visible"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_8sdp"
            android:src="@drawable/ic_add_cart" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="6dp"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="@dimen/_2sdp">

            <LinearLayout
                android:id="@+id/llReturnRow"
                style="@style/Base.Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_17sdp"
                android:background="@drawable/white_border"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/tvDecreaseReturnRow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/my_cart_minus_bg">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="12dp"
                        android:layout_centerInParent="true"
                        android:tint="@color/green_dark_new"
                        android:src="@drawable/minus" />
                </RelativeLayout>


                <TextView
                    android:id="@+id/tvValueReturnRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/hind_semibold"

                    android:text="1"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <RelativeLayout
                    android:id="@+id/tvIncreaseReturnRow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/my_cart_plus_bg">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="12dp"
                        android:layout_centerInParent="true"
                        android:tint="@color/green_dark_new"
                        android:src="@drawable/plus" />
                </RelativeLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

