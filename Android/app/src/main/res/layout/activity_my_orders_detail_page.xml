<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.MyOrdersDetailPage">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rlHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.appbar.AppBarLayout
                    android:id="@+id/app_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fitsSystemWindows="false"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:background="@color/white"
                        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="?attr/actionBarSize">

                            <ImageView
                                android:id="@+id/ivBack"
                                android:layout_width="@dimen/back_btn_width"
                                android:layout_height="@dimen/back_btn_height"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"

                                android:padding="4dp"
                                android:src="@drawable/ic_back"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/tv_toolbarTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"

                                android:fontFamily="@font/montserrat"

                                android:text="@string/my_orders_detail_Title"
                                android:textColor="@color/grey_new"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:typeface="sans" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <ImageView
                                android:id="@+id/ivWishList"
                                android:layout_width="18dp"
                                android:layout_height="22dp"
                                android:layout_alignRight="@+id/cartRl"
                                android:layout_alignBottom="@+id/cartRl"
                                android:layout_marginRight="40dp"
                                android:layout_marginBottom="-4dp"
                                android:src="@drawable/location_pin"
                                android:visibility="gone" />

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="20dp"
                                android:layout_alignRight="@+id/ivWishList"
                                android:layout_alignBottom="@+id/ivWishList"
                                android:layout_marginRight="32dp"
                                android:src="@drawable/search"
                                android:visibility="gone" />
                        </RelativeLayout>
                    </androidx.appcompat.widget.Toolbar>
                </com.google.android.material.appbar.AppBarLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/rl_shimmer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/cvFooter"
            android:layout_below="@+id/cvHeader"
            android:visibility="visible"
            app:shimmer_duration="1000">

            <include
                layout="@layout/shimmer_my_order_details_layout"
                android:layout_width="match_parent"

                android:layout_height="wrap_content">

            </include>
        </com.facebook.shimmer.ShimmerFrameLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nsvMyOrdersDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/cvFooter"
            android:layout_below="@+id/cvHeader"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtOrderInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_margin="16dp"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/my_orders_detail_oi"
                    android:textAlignment="viewStart"
                    android:textColor="#4C4C4C" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvOrderInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtOrderInfo">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:id="@+id/txtOrdeid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="16dp"
                            android:fontFamily="@font/hind_medium"
                            android:text="@string/my_orders_row_orderno"
                            android:textAlignment="viewStart"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/tvOrderNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/txtOrdeid"
                            android:fontFamily="@font/hind_medium"
                            android:text="12458-7452-1510 14 Sept. 2019, 11:12 AM"
                            android:textAlignment="viewStart"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/tvDateNTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txtOrdeid"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="16dp"
                            android:fontFamily="@font/hind"
                            android:text="14 Sept. 2019, 11:12 AM"
                            android:textColor="#5C5C5C" />

                        <TextView
                            android:id="@+id/txtOrderTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvDateNTime"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="16dp"
                            android:fontFamily="@font/hind_medium"
                            android:text="@string/my_orders_row_time"
                            android:textAlignment="viewStart"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/tvOrderTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvDateNTime"
                            android:layout_toEndOf="@+id/txtOrderTime"
                            android:fontFamily="@font/hind"
                            android:text="12458-7452-1510 14 Sept. 2019, 11:12 AM"
                            android:textColor="@color/black" />

                        <LinearLayout
                            android:id="@+id/ll_special"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txtOrderTime"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txtSpecial"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:fontFamily="@font/hind_medium"
                                android:text="@string/special_instructions"
                                android:textAlignment="viewStart"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/tvSpecialInstrucion"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:fontFamily="@font/hind"
                                android:text="12458-7452-1510 14 Sept. 2019, 11:12 AM"
                                android:textAlignment="viewStart"
                                android:textColor="@color/black"
                                android:textSize="12sp" />


                        </LinearLayout>


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


                <TextView

                    android:id="@+id/txtDeliveryDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cvOrderInfo"
                    android:layout_alignParentStart="true"
                    android:layout_margin="16dp"

                    android:fontFamily="@font/montserrat"
                    android:text="@string/my_orders_detail_dd"
                    android:textAlignment="viewStart"
                    android:textColor="#4C4C4C" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvDeliveryDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtDeliveryDetail">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:id="@+id/tvDeliveryDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:textAlignment="viewStart"
                            android:layout_alignParentStart="true"
                            android:fontFamily="@font/hind_medium"
                            android:text="20 Sept. 2019"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/tvDeliveryTimeSlot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvDeliveryDate"
                            android:layout_marginStart="16dp"
                            android:textAlignment="viewStart"
                            android:layout_alignParentStart="true"
                            android:fontFamily="@font/hind"
                            android:text="10:00 AM - 12:00 PM"
                            android:textColor="#5C5C5C" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/txtShipping_Billing_Address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cvDeliveryDetail"
                    android:layout_margin="16dp"
                    android:textAlignment="viewStart"
                    android:layout_alignParentStart="true"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/my_orders_detail_snba"
                    android:textColor="#4C4C4C" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvShipping_Billing_Address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtShipping_Billing_Address">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:textAlignment="viewStart"
                            android:fontFamily="@font/hind"
                            android:layout_alignParentStart="true"
                            android:text="Rahul Sharma"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvName"
                            android:layout_alignParentStart="true"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="8dp"
                            android:textAlignment="viewStart"
                            android:layout_marginRight="16dp"
                            android:layout_marginBottom="8dp"
                            android:fontFamily="@font/hind"
                            android:text="@string/pay_option_dummy_address"
                            android:textColor="#5C5C5C" />

                        <TextView
                            android:id="@+id/txtMobile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvAddress"
                            android:layout_marginStart="16dp"
                            android:layout_alignParentStart="true"
                            android:textAlignment="viewStart"
                            android:fontFamily="@font/hind"
                            android:text="@string/mobile"
                            android:textColor="#5C5C5C" />

                        <TextView
                            android:id="@+id/tvMobileNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvAddress"
                            android:layout_toEndOf="@+id/txtMobile"
                            android:layout_weight="1"
                            android:fontFamily="@font/hind"
                            android:text="9845632140"
                            android:textColor="#5C5C5C"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/txtOrderSummary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cvShipping_Billing_Address"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_alignParentStart="true"
                    android:textAlignment="viewStart"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/my_cart_os"
                    android:textColor="#4C4C4C" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvOrderSummary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtOrderSummary">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/llSubTotal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginRight="16dp"
                            android:orientation="horizontal">

                            <TextView

                                android:id="@+id/txtSubtotal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_weight="1"
                                android:textAlignment="viewStart"
                                android:fontFamily="@font/hind"
                                android:text="@string/my_cart_subtotal"
                                android:textColor="#5C5C5C" />

                            <TextView
                                android:id="@+id/tvSubtotal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_weight="1"
                                android:textAlignment="viewEnd"
                                android:fontFamily="@font/hind"
                                android:gravity="end"
                                android:text="@string/current_curremcy_zero"
                                android:textColor="#5C5C5C" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llDiscount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/llSubTotal"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:orientation="horizontal">

                            <TextView

                                android:id="@+id/txtDiscount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_weight="1"
                                android:textAlignment="viewStart"
                                android:fontFamily="@font/hind"
                                android:text="@string/my_cart_discount"
                                android:textColor="#5C5C5C" />

                            <TextView
                                android:id="@+id/tvDiscount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/hind"
                                android:gravity="end"
                                android:textAlignment="viewEnd"
                                android:text="@string/current_curremcy_zero"
                                android:textColor="@color/app_red_clr" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llDeliveryCharges"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/llDiscount"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:orientation="horizontal">

                            <TextView

                                android:id="@+id/txtDeliveryCharges"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_weight="1"
                                android:textAlignment="viewStart"
                                android:fontFamily="@font/hind"
                                android:text="@string/my_cart_dc"
                                android:textColor="#5C5C5C" />

                            <TextView
                                android:id="@+id/tvDeliveryCharges"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/hind"
                                android:gravity="end"
                                android:textAlignment="viewEnd"
                                android:text="@string/current_curremcy_zero"
                                android:textColor="#5C5C5C" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llLoyaltyPoints"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/llDeliveryCharges"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView

                                android:id="@+id/txtLoyalty"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/hind"
                                android:text="Applied Wallet Amount"
                                android:textColor="#5C5C5C" />

                            <TextView
                                android:id="@+id/tvAppliedLoyaltyAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/hind"
                                android:gravity="end"
                                android:text="@string/current_curremcy_zero"
                                android:textColor="@color/app_red_clr" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llEstimatedTax"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/llLoyaltyPoints"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView

                                android:id="@+id/txtEstimatedTax"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/hind"
                                android:text="@string/my_cart_et"
                                android:textColor="#5C5C5C" />

                            <TextView
                                android:id="@+id/tvEstimatedTax"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/hind"
                                android:gravity="end"
                                android:text="@string/current_curremcy_zero"
                                android:textColor="#5C5C5C" />
                        </LinearLayout>

                        <View
                            android:id="@+id/view4"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@id/llEstimatedTax"
                            android:layout_marginTop="16dp"
                            android:background="@color/view_divider_clr" />

                        <LinearLayout
                            android:id="@+id/llTotalAmount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/view4"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="8dp"
                            android:textAlignment="viewStart"
                            android:layout_marginRight="16dp"
                            android:orientation="horizontal">

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/hind"
                                android:text="@string/my_cart_ta"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textAlignment="viewStart"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvTotalSumPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textAlignment="viewEnd"
                                android:fontFamily="@font/hind"
                                android:gravity="end"
                                android:text="@string/current_curremcy_zero"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <View
                            android:id="@+id/view5"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@id/llTotalAmount"
                            android:layout_marginTop="8dp"
                            android:background="@color/view_divider_clr" />

                        <TextView
                            android:id="@+id/txtPaymentmode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/view5"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:layout_alignParentStart="true"
                            android:textAlignment="viewStart"
                            android:layout_marginBottom="8dp"
                            android:fontFamily="@font/hind_medium"
                            android:text="@string/my_orders_row_order_pm"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/tvPaymentMode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/view5"
                            android:layout_marginStart="4dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="8dp"
                            android:textAlignment="viewStart"
                            android:layout_marginBottom="8dp"
                            android:layout_toEndOf="@+id/txtPaymentmode"
                            android:fontFamily="@font/hind_medium"
                            android:text="Cash on delivery"
                            android:textColor="@color/black" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/txtItemsOrdered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cvOrderSummary"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="16dp"
                    android:textAlignment="viewStart"
android:layout_alignParentStart="true"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/my_orders_detail_iito"
                    android:textColor="#4C4C4C" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvItemsOrdered"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtItemsOrdered" />

                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_below="@+id/rvItemsOrdered"
                    android:background="@drawable/test_divider" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvOrderChoices"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/hind_semibold"
                            android:text="@string/my_orders_detail_ri"
                            android:textAlignment="center"
                            android:textColor="#ED1B24"
                            android:visibility="gone" />

                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="@color/view_divider_clr"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tvRepeatOrder"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/hind_semibold"
                            android:text="@string/my_orders_detail_ro"
                            android:textAlignment="center"
                            android:textColor="#0B9444"
                            android:visibility="gone" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_below="@+id/cvOrderChoices"
                    android:background="@drawable/test_divider" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvRequestInvoice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view3"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivInvoice"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/request_invoice"
                            android:tint="#E5E5E5" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="16dp"
                            android:layout_toRightOf="@+id/ivInvoice"
                            android:layout_weight="1"
                            android:fontFamily="@font/hind_semibold"
                            android:text="@string/my_orders_detail_rinvoice"
                            android:textAllCaps="true"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/next_my_acc" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <View
                    android:id="@+id/view6"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_below="@+id/cvOrderChoices"
                    android:background="@drawable/test_divider" />
            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvFooter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:paddingTop="8dp">

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="26dp"
                    android:layout_marginEnd="26dp"
                    android:layout_weight="1"
                    android:background="@drawable/green_round_side"
                    android:text="@string/cancel"
                    android:textColor="@color/white"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btnPayNow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/app_red_bg"
                    android:text="Pay Now"
                    android:textColor="@color/white"
                    android:visibility="gone" />


            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <ProgressBar
            android:id="@+id/progressSpinKitView"

            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"

            android:visibility="gone"
            app:SpinKit_Color="@color/green_new" />
    </RelativeLayout>
</layout>