<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout android:id="@+id/addAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvDeliveryDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton

                    android:id="@+id/rbSelection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/lldetail"
                    android:layout_marginLeft="8dp" />


                <ImageView
                    android:id="@+id/ivMoreAddress"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignTop="@+id/lldetail"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/vertical_more" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/more_vertical"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/lldetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_toLeftOf="@+id/ivMoreAddress"
                    android:layout_toRightOf="@+id/rbSelection"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:fontFamily="@font/hind"
                            android:text="Rahul Sharma"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvIsDefault"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_toRightOf="@+id/tvName"
                            android:background="@drawable/pay_option_default_bg"
                            android:fontFamily="@font/hind_medium"
                            android:text="@string/pay_option_default"
                            android:textColor="#0B9444"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tvAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvName"
                        android:layout_toLeftOf="@+id/ivMore"
                        android:layout_weight="1"
                        android:fontFamily="@font/hind"
                        android:text="@string/pay_option_dummy_address"
                        android:textColor="#5C5C5C" />
                </LinearLayout>


                <TextView
                    android:id="@+id/txtMobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lldetail"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/rbSelection"
                    android:layout_weight="1"
                    android:fontFamily="@font/hind"
                    android:text="Mobile :"
                    android:textColor="#5C5C5C" />

                <TextView
                    android:id="@+id/tvMobileNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lldetail"
                    android:layout_toRightOf="@+id/txtMobile"
                    android:layout_weight="1"
                    android:fontFamily="@font/hind"
                    android:text="9845632140"
                    android:textColor="#575757"
                    android:textStyle="bold" />


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

