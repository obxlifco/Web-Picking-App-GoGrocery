<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.ReviewProductPage">

        <RelativeLayout
            android:id="@+id/rlHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/app_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="false"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@color/white"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/ivBack"
                            android:layout_width="@dimen/back_btn_width"
                            android:layout_height="@dimen/back_btn_height"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="16dp"
                            android:src="@drawable/back_arrow_black" />

                        <TextView
                            android:id="@+id/tvListingTitle"
                            android:textColor="#202020"
                            android:textSize="16sp"

                            android:fontFamily="@font/montserrat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@+id/ivSearch"
                            android:layout_toLeftOf="@+id/ivSearch"
                            android:layout_toEndOf="@+id/ivBack"
                            android:layout_toRightOf="@+id/ivBack"
                            android:text="@string/review_product_title" />

                        <RelativeLayout
                            android:id="@+id/cartRl"
                            android:layout_width="32dp"
                            android:layout_height="26dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="16dp"
                            android:visibility="gone">


                            <ImageView
                                android:id="@+id/ivCart"
                                android:layout_width="20dp"
                                android:layout_height="22dp"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:src="@drawable/ic_cart" />

                            <TextView
                                android:id="@+id/badge_notification"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_gravity="right|end|top"
                                android:layout_marginTop="3dp"
                                android:layout_marginEnd="-10dp"
                                android:layout_marginRight="-10dp"
                                android:layout_toLeftOf="@+id/ivCart"
                                android:background="@drawable/badge_circle"
                                android:gravity="center"
                                android:padding="3dp"
                                android:text="0"
                                android:textColor="@android:color/white"
                                android:textSize="8sp"
                                android:visibility="gone" />


                        </RelativeLayout>

                        <ImageView
                            android:id="@+id/ivWishList"
                            android:layout_width="18dp"
                            android:layout_height="22dp"
                            android:layout_alignRight="@+id/cartRl"
                            android:layout_alignBottom="@+id/cartRl"
                            android:layout_marginRight="36dp"
                            android:layout_marginBottom="-4dp"
                            android:src="@drawable/location_pin"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/ivSearch"
                            android:layout_width="18dp"
                            android:layout_height="20dp"
                            android:layout_alignRight="@+id/ivWishList"
                            android:layout_alignBottom="@+id/ivWishList"
                            android:layout_marginRight="32dp"
                            android:src="@drawable/search"
                            android:visibility="gone" />
                    </RelativeLayout>
                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.AppBarLayout>
        </RelativeLayout>

        <View
            android:id="@+id/viewHeaderDvider"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_below="@+id/rlHeader"
            android:background="@drawable/test_divider" />

        <com.willy.ratingbar.ScaleRatingBar
            android:id="@+id/simpleRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/viewHeaderDvider"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:srb_clearRatingEnabled="true"
            app:srb_clickable="true"
            app:srb_drawableEmpty="@drawable/ic_star_empty"
            app:srb_drawableFilled="@drawable/ic_rate_star"
            app:srb_isIndicator="false"
            app:srb_numStars="5"
            app:srb_scrollable="true"
            app:srb_starHeight="24dp"
            app:srb_starPadding="8dp"
            app:srb_starWidth="24dp" />

        <TextView
            android:id="@+id/tvRatingExpression"
            android:textColor="#202020"
            android:textSize="16sp"

            android:fontFamily="@font/montserrat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/simpleRatingBar"
            android:layout_alignBottom="@+id/simpleRatingBar"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/simpleRatingBar"
            android:gravity="center_vertical"
            android:visibility="gone" />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/simpleRatingBar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt1"
                    android:layout_margin="16dp"
                    android:hint="@string/review_product_ert"
                    app:boxStrokeColor="#10893C"
                    app:hintTextAppearance="@style/customHintApperance">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtReviewTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt1"
                    android:layout_margin="16dp"
                    android:hint="@string/review_product_erd"
                    app:boxStrokeColor="#10893C"
                    app:hintTextAppearance="@style/customHintApperance">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtReviewDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lines="5" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:paddingTop="8dp">

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/change_pass_red_border_bg"
                    android:text="@string/cancel"
                    android:textColor="@color/app_red_clr" />

                <Button
                    android:id="@+id/btnSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/app_red_bg"
                    android:text="@string/submit"
                    android:textColor="@color/white" />


            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/progressSpinKitView"
            style="@style/SpinKitView.Small.ThreeBounce"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:background="@drawable/curve_corner_translucent_bg"
            android:padding="8dp"
            android:visibility="gone"
            app:SpinKit_Color="@color/green_new" />
    </RelativeLayout>
</layout>
