<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true">

            <fragment
                android:id="@+id/mp_map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:tag="mapFragmentTag"
                tools:context=".view.MapLocationSelection"
                tools:ignore="FragmentTagUsage" />


        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            app:cardElevation="@dimen/_5sdp">

            <RelativeLayout
                android:id="@+id/rlHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.appbar.AppBarLayout
                    android:id="@+id/app_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fitsSystemWindows="false"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:background="@color/white"
                        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/ivBack"
                                android:layout_width="@dimen/back_btn_width"
                                android:layout_height="@dimen/back_btn_height"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:visibility="gone"
                                android:padding="4dp"
                                android:src="@drawable/ic_back"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ImageView
                                android:id="@+id/ivClose"
                                android:layout_width="@dimen/back_btn_width"
                                android:layout_height="@dimen/back_btn_height"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:padding="8dp"
                                android:src="@drawable/ic_close" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:fontFamily="@font/proxima_regular"
                                android:gravity="center"
                                android:text="@string/toolbar_title_search"
                                android:textColor="@color/grey_new"
                                android:textSize="@dimen/_15sdp"
                                android:textStyle="bold" />

                        </RelativeLayout>
                    </androidx.appcompat.widget.Toolbar>
                </com.google.android.material.appbar.AppBarLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <RelativeLayout
            android:id="@+id/tvbtn_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:layout_below="@+id/cvHeader"
            android:layout_centerHorizontal="true"
            android:background="@drawable/seach_backround">

            <fragment
                android:id="@+id/autocomplete_fragment"
                android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/_50sdp"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/ivBtn_currentLocation"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_above="@+id/btnConfirmLocationDeliveryHere"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:padding="4dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/current_location"
            android:tint="@color/green_dark_new"
            tools:ignore="ContentDescription">

        </ImageView>


        <LinearLayout
            android:id="@+id/btnConfirmLocationDeliveryHere"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_map_confirm"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="4dp"
            android:visibility="visible"
            android:layout_gravity="bottom|start"
            android:textAllCaps="false"
            android:textColor="@color/white">

            <View
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_1sdp"
                android:visibility="gone"
                android:background="@color/green_dark_new" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp">

                <ImageView
                    android:id="@+id/imgDel"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_delivery" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="8dp"
                    android:layout_toEndOf="@+id/imgDel"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvDel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/proxima_regular"
                        android:text="@string/next"
                        android:ellipsize="end"
                        android:textAlignment="viewStart"
                        android:textAllCaps="false"
                        android:textColor="@color/green_new"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvDeliveryAt"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/proxima_regular"
                        android:text=""
                        android:ellipsize="end"
                        android:textAlignment="viewStart"
                        android:textColor="@color/grey_new"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"
                        android:maxLines="2"
                        android:lines="2"
                        android:layout_marginEnd="@dimen/_16sdp"/>


                </LinearLayout>


                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:padding="6dp"
                    android:visibility="gone"
                    android:tint="@color/green_new"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_arrow_go"
                    android:layout_marginStart="@dimen/_10sdp"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_6sdp"
                android:textSize="@dimen/_11sdp"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_marginEnd="@dimen/_6sdp"
         android:layout_marginBottom="4dp"
                android:background="@drawable/round_corner_bg_light_green"
                android:fontFamily="@font/proxima_regular"
                android:textColor="@color/colorWhite"
                android:text="@string/deliver_here"></TextView>
        </LinearLayout>

        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/progressSpinKitView"
            style="@style/SpinKitView.Small.ThreeBounce"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:background="@drawable/curve_corner_translucent_bg"
            android:padding="8dp"
            android:visibility="gone"
            app:SpinKit_Color="@color/green_new" />
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
