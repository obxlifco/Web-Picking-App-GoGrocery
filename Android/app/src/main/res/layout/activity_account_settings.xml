<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#868382"
        tools:context=".view.AccountSettings">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_white_round_corner"
                android:layout_margin="@dimen/_10sdp">


                <RelativeLayout
                    android:id="@+id/cv1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ivBack"
                        android:layout_width="@dimen/back_btn_width"
                        android:layout_height="@dimen/back_btn_height"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="16dp"

                        android:layout_marginTop="@dimen/_14sdp"
                        android:src="@drawable/ic_close_black"
                        android:tint="@color/brown_new"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </RelativeLayout>
                <TextView
                    android:layout_marginLeft="16dp"
                    android:textColor="@color/grey_new"
                    android:textSize="@dimen/_22sdp"
                    android:id="@+id/tvFwd"
                    android:ellipsize="end"
                    android:textAlignment="center"
                    android:layout_below="@+id/cv1"
                    android:fontFamily="@font/proxima_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_18sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                android:layout_alignParentTop="true"

                    android:text="@string/toolbar_title_change_personal_information"
                    android:gravity="center"


                    android:layout_marginTop="@dimen/_16sdp"/>
                <TextView
                    android:fontFamily="@font/proxima_regular"
                    android:id="@+id/tv1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvFwd"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:visibility="gone"
                    android:layout_marginRight="16dp"
                    android:text="@string/forgetpass_txt1"
                    android:textAlignment="center"/>

                <RelativeLayout
                    android:id="@+id/rl_changesPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv1"
                    android:layout_marginTop="16dp">

                    <androidx.core.widget.NestedScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rl2">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.material.textfield.TextInputLayout

                                android:id="@+id/tilFirstname"

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16dp"
                                android:layout_marginTop="16dp"
                                android:layout_marginRight="16dp"
                                android:hint="@string/acc_setting_fn"
                                app:boxStrokeColor="#10893C"
                                app:hintTextAppearance="@style/customHintApperance">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edtFirstName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:textAlignment="viewStart"
                                    android:fontFamily="@font/hind"
                                    android:textColor="@color/black" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/tilLastName"

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tilFirstname"
                                android:layout_marginLeft="16dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginRight="16dp"
                                android:hint="@string/acc_setting_ln"
                                app:boxStrokeColor="#10893C"
                                app:hintTextAppearance="@style/customHintApperance">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edtLastName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/hind"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:textAlignment="viewStart"
                                    android:textColor="@color/black" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout

                                android:id="@+id/tilEmailAddress"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tilLastName"
                                android:layout_marginLeft="16dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginRight="16dp"
