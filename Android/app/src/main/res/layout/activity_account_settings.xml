                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:maxLines="1"
                                    android:fontFamily="@font/hind"
                                    android:textColor="@color/black" />
                            </com.google.android.material.textfield.TextInputLayout>

