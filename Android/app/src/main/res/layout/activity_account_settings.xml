                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/hind"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:textAlignment="viewStart"
                                    android:textColor="@color/black" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <LinearLayout
                                android:id="@+id/llContact"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tilEmailAddress"
                                android:layout_marginLeft="16dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginRight="16dp"
                                android:orientation="horizontal">

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/tilExtension"

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:boxStrokeColor="#10893C"
                                    app:hintTextAppearance="@style/customHintApperance">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/edtExtension"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:editable="false"

                                        android:maxLines="1"

                                        android:enabled="false"
                                        android:fontFamily="@font/hind"
                                        android:text="+971"
                                        android:textColor="@color/black" />
                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/tilCarrierNo"

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:hint="CC  "
                                    android:tooltipText="Carrier code"
                                    app:boxStrokeColor="#10893C"
                                    app:hintTextAppearance="@style/customHintApperance">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/edtCarrierNo"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:drawableEnd="@drawable/drop_down_arrow"
                                        android:editable="false"
                                        android:fontFamily="@font/hind"
                                        android:hint="CC  "
                                        android:maxLines="1"
                                        android:textColor="@color/black"
                                        android:textColorHint="@color/transparent"
                                        android:tooltipText="Carrier code" />
                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/tilMobileNo"

                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:hint="@string/mobileno"
                                    app:boxStrokeColor="#10893C"
                                    app:hintTextAppearance="@style/customHintApperance">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/edtMObileNo"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:singleLine="true"
                                        android:inputType="number"
                                        android:maxLength="7"
                                        android:ellipsize="end"
                                        android:textAlignment="viewStart"
                                        android:fontFamily="@font/hind"
                                        android:textColor="@color/black" />
                                </com.google.android.material.textfield.TextInputLayout>
                            </LinearLayout>


                            <com.google.android.material.textfield.TextInputLayout


