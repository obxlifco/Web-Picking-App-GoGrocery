<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mumbai.dev.sdkdubai"
    android:versionCode="2"
    android:versionName="2.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="28" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true" >
        <activity android:name="mumbai.dev.sdkdubai.PaymentDetails" />
        <activity
            android:name="mumbai.dev.sdkdubai.WebViewActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="mumbai.dev.sdkdubai.PaymentOptions"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name="mumbai.dev.sdkdubai.SavedCard" />
        <activity android:name="mumbai.dev.sdkdubai.NewCreditCard" />
        <activity android:name="mumbai.dev.sdkdubai.NewDebitCard" />
        <activity
            android:name="mumbai.dev.sdkdubai.AddressConfirmation"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="mumbai.dev.sdkdubai.DialogActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
    </application>

</manifest>